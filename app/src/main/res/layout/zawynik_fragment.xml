<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="#FEFEFE"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:text="#13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/elem_n"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="normal|bold"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="1">

            <TextView
                android:text="Grzegorz Brzęczyszczykiewicz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/elem_nazwa"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="?android:attr/textColorSecondary"
                />
            <TextView
                android:text="KS Pilica Tomaszów Mazowiecki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/elem_klub"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorTertiary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:text="2014-02-11: 400+200=600
2014-02-13: 380+160=540"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/elem_tekst"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:textStyle="normal|italic"
                android:textSize="16sp" />

            <TextView
                android:text="Łącznie: 1140"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/elem_lacznie"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>