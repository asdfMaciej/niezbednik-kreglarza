<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="maciej01.soft.niezbednikkreglarza.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/colorBg">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/smieciarka" />

    <TextView
        android:text="Obecnie nie ma tu żadnych wyników. Aby dodać własne, naciśnij przycisk w prawym dolnym rogu ekranu."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPustaSmieciarka"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textColor="?android:attr/textColorSecondary" />
</RelativeLayout>
