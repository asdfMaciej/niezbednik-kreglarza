<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="8dp"
        android:id="@+id/statLayMain">

        <TextView
            android:text="Sezon 2016/2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statOkres"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@android:color/background_light"
            android:elevation="2dp"
            android:id="@+id/statLayIlosc">

            <TextView
                android:text="Ilość startów:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:textColor="?android:attr/textColorSecondary"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/statIlosc"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textAlignment="center"
                android:textSize="36sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:elevation="1dp"
                    android:background="@color/cardBg">

                    <TextView
                        android:text="Najlepszy wynik:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="750"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statNajlepszy"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cardBg"
                    android:layout_marginLeft="4dp">

                    <TextView
                        android:text="Najgorszy wynik:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="431"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statNajgorszy"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@android:color/background_light"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            android:id="@+id/statLaySrednie">

            <TextView
                android:text="Średnia ilość"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:textColor="?android:attr/textColorSecondary"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@color/cardBg"
                    android:layout_marginRight="4dp"
                    android:elevation="1dp">

                    <TextView
                        android:text="Sumy kręgli:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="685"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statSrWynik"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:text="Zbieranych:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="210"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statSrZbierane"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:background="@color/cardBg"
                    android:elevation="1dp">

                    <TextView
                        android:text="Pełnych:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="413"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statSrPelne"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:text="Rzutów zerowych:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statSrDziury"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@android:color/background_light"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:id="@+id/statLayNorma">

            <TextView
                android:text="Starty powyżej normy:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                android:textColor="?android:attr/textColorSecondary"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@color/cardBg"
                    android:layout_marginRight="4dp"
                    android:elevation="1dp">

                    <TextView
                        android:text="Wyniku:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="95"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statNrmWynik"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp"
                        android:textSize="34sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cardBg"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:elevation="1dp">

                    <TextView
                        android:text="Pełnych:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statNrmPelne"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp"
                        android:textSize="34sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/cardBg"
                    android:layout_marginLeft="4dp"
                    android:elevation="1dp">

                    <TextView
                        android:text="Zbieranych:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textStyle="normal|italic" />

                    <TextView
                        android:text="80"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statNrmZbierane"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp"
                        android:textSize="34sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:id="@+id/statLayBez"
        android:visibility="invisible"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:text="Na razie nie ma tu żadnych statystyk - potrzebny jest minimum jeden wynik!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPusteStatystyki"

            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="24dp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/rectangle_at_the_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout>