<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#FEFEFE"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:text="2017-03-25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_data"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            android:textAlignment="center" />

        <TextView
            android:text="Pewieawodnik Bardzodługi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_pelne"
            android:layout_alignParentStart="true"
            android:id="@+id/article_zawodnik"
            android:textSize="14sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/article_wynik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wynik: xxx"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="36sp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="X: xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article_dziury"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/article_pelne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P: xxx"
                android:textColor="#888"
                android:textSize="14sp"
                android:textAlignment="viewStart"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Z: xxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/article_zbierane"
                android:textAlignment="viewEnd"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textStyle="normal|bold" />

        </RelativeLayout>

        <TextView
            android:text="Kręgielnia Ośrodka Sportu i Rekreacji w Gostyniu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:id="@+id/article_kregielnia"
            android:textSize="14sp"
            android:textAlignment="center" />

    </LinearLayout>

</android.support.v7.widget.CardView>